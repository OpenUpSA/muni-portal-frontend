{
  "extends": ["eslint:recommended", "plugin:import/errors", "prettier"],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["assert", "debug", "error"]
      }
    ]
  },
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
    "node": true
  },
  "globals": {
    "dataLayer": true,
    "clients": true,
    "importScripts": true,
    "L": true,
    "Webflow": true,
    "workbox": true
  }
}
